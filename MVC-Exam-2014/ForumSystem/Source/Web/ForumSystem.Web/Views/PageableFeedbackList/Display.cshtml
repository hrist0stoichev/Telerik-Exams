@model IEnumerable<ForumSystem.Web.ViewModels.Feedbacks.FeedbackDisplayViewModel>
@{
    ViewBag.Title = "Display feedbacks";
}

<h2>@ViewBag.Title</h2>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Author</th>
            <th>Title</th>
            <th>Content</th>
            <th>Created On</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var feedback in Model)
        {

            <tr>
                <td>@feedback.AuthorName</td>
                <td>@feedback.Title</td>
                <td>@Html.Raw(feedback.Content)</td>
                <td>@feedback.CreatedOn</td>
            </tr>
        }
    </tbody>
</table>

<div class="row text-center">
    <ul class="pagination">
        @if ((int)ViewBag.CurrentPage <= 1)
        {
            <li class="disabled"><a href="#">«</a></li>
        }
        else
        {
            <li><a href="~/PageableFeedbackList/Display?page=@((int)ViewBag.CurrentPage - 1)">«</a></li>
        }
        @for (int i = 1; i <= ViewBag.AllPages; i++)
        {
            if ((int)ViewBag.CurrentPage == i)
            {
                <li class="active"><a href="~/PageableFeedbackList/Display?page=@i">@i</a></li>
            }
            else
            {
                <li><a href="~/PageableFeedbackList/Display?page=@i">@i</a></li>
            }
        }
        @if ((int)ViewBag.CurrentPage >= (int)ViewBag.AllPages)
        {
            <li class="disabled"><a href="#">»</a></li>
        }
        else
        {
            <li><a href="~/PageableFeedbackList/Display?page=@((int)ViewBag.CurrentPage + 1)">»</a></li>
        }
    </ul>
</div>
