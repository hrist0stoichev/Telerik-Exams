@model IEnumerable<ForumSystem.Web.ViewModels.Home.IndexBlogPostViewModel>
@{
    ViewBag.Title = "Home Page";
}
<div class="container">
    @if (TempData["NotificationMessage"] != null)
    {
        <h2 class="row text-success text-center">@TempData["NotificationMessage"]</h2>
    }
    
    @foreach (var post in Model)
    {
        <div class="row">
            <div class="col-md-1" id="element + @post.Id.ToString()">
                @Html.Partial("_Vote", post)
            </div>
            <div class="col-md-1">
                <div class="well text-center">
                    <div class="row">0</div>
                    <div class="row">answers</div>
                </div>
            </div>
            <div class="col-md-10">
                <div class="row">
                    <h4>
                        <a href="/@post.Id/@post.Title">@post.Title</a>
                    </h4>
                </div>
                <div class="row">
                    <p>asked by @post.AuthorName (40 points)</p>
                </div>
                <div class="row">
                    @foreach (var tag in post.Tags)
                    {
                        <span class="label label-default">@tag.Name</span>
                    }
                </div>
            </div>
        </div>
        <hr />
    }
</div>
